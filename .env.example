# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
# Choose one: SQLite (local), PostgreSQL/Neon, or Turso
DATABASE_URL=sqlite:///instance/app.db
# For PostgreSQL/Neon: postgresql://user:password@host:5432/dbname
# TURSO_DATABASE_URL=libsql://your-database.turso.io
# TURSO_AUTH_TOKEN=your-turso-auth-token

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=info@pollination.africa

# Stripe Payment Gateway
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# DPO Payment Gateway (Tanzania Mobile Money & Cards)
# Contact DPO: support@dpogroup.com or +255 677 335 555
DPO_COMPANY_TOKEN=your-dpo-company-token
DPO_SERVICE_TYPE=your-service-type-code
DPO_CURRENCY=TZS
DPO_TEST_MODE=True

# DPO API URLs (defaults are set in config.py)
DPO_API_URL_TEST=https://secure1.sandbox.directpay.online
DPO_API_URL_LIVE=https://secure.3gdirectpay.com

# DPO Callback URLs (update with your domain)
DPO_REDIRECT_URL=http://localhost:5000/payments/dpo/callback
DPO_BACK_URL=http://localhost:5000/payments/cancel

# Payment Token Lifetime (hours) - Default: 5 hours
DPO_PAYMENT_TOKEN_LIFETIME=5

# Bank Details (for manual bank transfer option)
BANK_NAME=CRDB Bank
BANK_ACCOUNT_NAME=Pollination Africa
BANK_ACCOUNT_NUMBER=0123456789
BANK_SWIFT=CORUTZTZ
BANK_BRANCH=Dar es Salaam Main Branch

